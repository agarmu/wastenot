block content 
    h1(class = "donationHeading") Donations
    form
        .form-group
            label(for='Address') Address: 
            input.form-control(type='input' id='#addressInput' placeholder='Address')
        .form-group
            label(for='Name') Name
            input.form-control(type='input' id ="Name" placeholder='Name')
        .form-check    
            p Type of Donation Center:
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='type of place') School

            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='type of cuisine') American
        .form-check
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='type of cuisine') Mediterranean
        .form-check
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='type of cuisine') Japanese
        .form-check
            input#exampleCheck1.form-check-input(type='checkbox')
            label.form-check-label(for='type of cuisine') Chinese
